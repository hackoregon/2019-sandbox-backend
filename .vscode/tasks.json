{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (production)",
            "type": "shell",
            "command": "scripts/build-run/build.sh -p",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "start (production)",
            "type": "shell",
            "command": "scripts/build-run/start.sh -p",
            "dependsOn": [
                "build (production)"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },           
            // "problemMatcher": {
            //     "fileLocation": ["relative", "${workspaceRoot}"],
            //     "pattern": {
            //         "regexp": "(api_1) (   \\|   File )\"((.*?)\"), line ((.?\\d))",
            //         "file": 4,
            //         "line": 5,
            //     },
            // }
        },            
        {
            "label": "browse (production)",
            "type": "shell",
            "command": "google-chrome 0.0.0.0:8000",
            "dependsOn": [
                "start (production)"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build (development)",
            "type": "shell",
            "command": "scripts/build-run/build.sh -d"
        },
        {
            "label": "start (development)",
            "type": "shell",
            "command": "scripts/build-run/start.sh -d"
        },
        {
            "label": "docker system prune",
            "type": "shell",
            "command": "docker system prune -af",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}